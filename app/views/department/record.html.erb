<h1>Department record</h1>

<table class="u-full-width">
  <thead>
  <tr>
    <th><%= Time.current.year %></th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @month.each do |m| %>
    <tr>
      <td><%= m %></td>
      <td class="btn-r"><%= button_to "check", department_monthly_record_path, {params: {department_id: params[:department_id], month: m}, method: :get } %></td>
    </tr>
    <% end %>
  </tbody>
</table>